local wireless = "back"
local wired = "bottom"
local wirelessProt = "wireless"

rednet.open(wired)
rednet.host(wirelessProt, wirelessProt)
rednet.close(wired)

while true do
	
	rednet.open(wired)
	local id, msg, protocol = rednet.receive()
	rednet.close(wired)
	
	if protocol == "dns" then
		rednet.open(wireless)
		rednet.send(id, tostring(os.getComputerID()), protocol)
		rednet.close(wireless)
	else
		rednet.open(wireless)
		rednet.send(tonumber(msg.id), msg, protocol)
		rednet.close(wireless)
	end

end